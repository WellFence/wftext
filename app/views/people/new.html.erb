<div class="row tcent lmarneg35 tmar25 bmar15">
  <%= link_to(image_tag("wflogo.PNG", class: "wid200"), welcome_index_path) %>
  <p class="lmar50 lpad5 tmarneg22 font1font1pointfive">Credentialed Wellsite Access</p>
</div>
<div class="tcent tpad25"><strong class="redfont">*</strong> <i class="grayfont">Indicates required field</i></div>
<div class="tcent posrel">
  <div class="dispin bmar50 tcent pad25">
    <%= form_for [@person] do |f| %>
      <% if @person.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@person.errors.count, "error") %></h4>
          <ul>
            <% @person.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
        <strong class="redfont pull-left dispin">*</strong><%= f.label :first_name, class: "pull-left" %><br>
        <%= f.text_field :first_name, class: 'form-control', required: true %><br>

        <strong class="redfont pull-left dispin">*</strong><%= f.label :last_name, class: "pull-left" %><br>
        <%= f.text_field :last_name, class: 'form-control', required: true %><br>

        <strong class="redfont pull-left dispin">*</strong><%= f.label :Company, class: "pull-left" %><br>
        <%= f.text_field :company, class: 'form-control', required: true %><br>

        <strong class="redfont pull-left dispin">*</strong><%= f.label :position, class: "pull-left" %><br>
        <%= f.text_field :position, class: 'form-control', required: true %><br>

        <strong class="redfont pull-left dispin">*</strong><%= f.label :email, class: "pull-left" %><br>
        <%= f.text_field :email, class: 'form-control', placeholder: "" %><br>

        <strong class="redfont pull-left dispin">*</strong><%= f.label :phone_number, class: "pull-left" %><br>
        <%= f.text_field :phone, class: 'form-control', placeholder: "8001234567", required: true %><br>

        <strong class="redfont pull-left dispin">*</strong><%= f.label :h2s, 'H2S Expiration Date', class: "pull-left" %><br>
        <%= f.date_field :h2s, class: 'form-control', required: true %><br>

        <strong class="redfont pull-left dispin">*</strong><%= f.label :document, "Picture of H2S Card required", class: "pull-left" %><br>
        <%= f.file_field :document, :html =>  { :multipart => true }, enctype: "multipart/form-data", class: 'form-control', required: true %><br>

          <strong class="redfont pull-left dispin">*</strong><%= f.label :rig, class: "pull-left" %><br>
        <%= f.text_field :rig, class: 'form-control', placeholder: "Patterson 287", required: true %><br>

        <div id="checkbox">
            <strong class="redfont pull-left dispin">*</strong><%= f.label :Do_you_have_a_physical_WellFence_card_in_hand?, "Do you have a WellFence card in your posession?", class: "pull-left" %><br>
          <%= f.check_box :has_card, class: 'font3rem dispin form-contr', placeholder: "yes/no" %><br>
        </div>

        <div id="cardnum">
          <%= f.label :WellFence_card_number, class: "pull-left" %><br><br>
          <%= f.text_field :card_number, class: 'form-control', placeholder: "" %><br>
        </div>
<!--data-toggle="modal" data-target="#yesModal"-->
        <div id="correct" >
          <%= f.submit "Submit", class: 'picshad btn btn-primary font5rem tmar25' %>
        </div>
        <div class="row ofont tpad0 tmar0 tcent maxwid150">
          <div id="yesModal" class="modal fade" role="dialog">
            <div class="modal-dialog tmar10per">
              <div class="modal-content">
                <%= render partial: 'people/modal', class: "z2", locals: { people: @people } %>
                <div class="modal-body">
                  <div class="row">
                    <div class="col-md-10 tcent">
                      <p>Thanks for registering. We will reach out to you promptly with further instructions.</p>
                    </div>
                    <div class="col-md-2 tcent tpad25">
                      <%= link_to "", welcome_index_path, class: "glyphicon glyphicon-circle-arrow-right pull-right bbbbfont animated infinite pulse pulse nodec font7rem" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>
<div class="tcent fullwid">
  <%= link_to "", welcome_index_path, class: "glyphicon grayfont glyphicon-home eefont nodec2 font3rem bpad25" %>
</div>
